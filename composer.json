{
    "name": "iqbal/belajar-php-unit-test",
    "description": "Belajar PHP Unit Test",
    "type": "project",
    "authors": [
        {
            "name": "iqbal",
            "email": "iqbalmenggala29@gmail.com"
        }
    ],
    "require": {
        "php" : ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "9.5.11"
    },
    "autoload": {
        "psr-4": {
            "Iqbal\\Test\\" : "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Iqbal\\Test\\" : "tests"
        }
    },
    "scripts": {
        "test" : "phpunit --configuration phpunit.xml",
        "test:product" : "phpunit --configuration phpunit.xml --testsuite product",
        "test:counter" : "phpunit --configuration phpunit.xml --testsuite counter"
    }
}
